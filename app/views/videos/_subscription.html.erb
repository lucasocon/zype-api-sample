
<% if session[:access_token] %>

  <div>
    <div class="alert alert-success " role="alert">
      <div class="d-inline p-2">You are subscribed</div>
      <div class="d-inline p-2">
        <a href="<%=videos_path%>" class="p-2 bg-info text-white">Video List</a>
      </div>
      <div class="d-inline p-2">
        <a href="<%=sessions_remove_path%>" class="p-2 bg-danger text-white">Unsubscribe</a>
      </div>
    </div>

    <div id="zype_<%=params[:id]%>"></div>

    <script src="https://player.zype.com/embed/<%=params[:id]%>.js?autoplay=true&access_token=<%=session[:access_token]%>" type="text/javascript"></script>
  </div>

<% else %>

  <div class="row ">
    <div class="col-sm-3"></div>
    <div class="col-sm-6">
      <h1 class="text-center login-title">Subscribe</h1>
      <div class="account-wall">
        <%= form_for(:session, url: sessions_create_path) do |f| %>

          <div class="form-group">
            <%= f.label :email %>
            <%= f.email_field :email, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :password %>
            <%= f.password_field :password, class: 'form-control' %>
          </div>

          <%= f.hidden_field :id, value: params[:id]%>

          <%= f.submit "Log in", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
    <div class="col-sm-3"></div>
  </div>

<% end %>